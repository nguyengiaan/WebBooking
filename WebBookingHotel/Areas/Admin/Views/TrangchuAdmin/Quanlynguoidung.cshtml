@section Scripts{
    <script>
        $(document).ready(function () {
            $('#submitBtntk').click(function () {
                themtaikhoan();
            });

            function themtaikhoan() {
                var form = $('#formThemtaikhoan')[0];
                var data = new FormData(form);
                $.ajax({
                    url: '/Nguoidung/Dangkythanhvien',
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    data: data,
                    beforeSend: function () {
                        Swal.fire({
                            title: "Loading...",
                            text: "Please wait",
                            imageUrl: "https://media3.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif",
                            imageWidth: 100,
                            imageHeight: 100,
                            imageAlt: "Loading",
                            allowOutsideClick: false,
                            showConfirmButton: false,
                        });
                    },
                    success: function (res) {
                        if (res.success == true) {
                            Swal.fire({
                                title: "Thêm tài khoản",
                                text: res.message, // Sửa 'response.message' thành 'res.message'
                                icon: "success"
                            });
                            $('#Themtaikhoan').modal('hide');
                            form.reset();
                        } else {
                            Swal.fire({
                                title: "Thêm tài khoản",
                                text: res.message, // Sửa 'response.message' thành 'res.message'
                                icon: "error"
                            });
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        Swal.fire({
                            title: "Lỗi",
                            text: "Đã xảy ra lỗi trong quá trình xử lý.",
                            icon: "error"
                        });
                    }
                });
            }
        });

    </script>
}